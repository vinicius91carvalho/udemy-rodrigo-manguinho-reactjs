{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
          }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": []
}